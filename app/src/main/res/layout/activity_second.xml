<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp"
    tools:context=".SecondActivity">
    <RelativeLayout
        android:id="@+id/sound"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/soundon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/soundon"/>
        <ImageView
            android:id="@+id/soundoff"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="invisible"
            android:src="@drawable/soundoff"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/brain_icon"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintRight_toLeftOf="@id/memoryGame_txt"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/memoryGame_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memory\nGame"
        android:textColor="@color/white"
        android:textAllCaps="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record time"
        android:textSize="20sp"
        android:textColor="@color/yellow"
        app:layout_constraintBottom_toTopOf="@id/time"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/secund"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/wrong_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong: "
        android:textColor="@color/yellow"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/wrong_rectime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/wrong_rec"
        app:layout_constraintTop_toBottomOf="@id/time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong: "
        android:textColor="@color/yellow"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintRight_toLeftOf="@id/wrong"
        app:layout_constraintBottom_toTopOf="@id/grid"/>
    <TextView
        android:id="@+id/wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/grid"/>
    <Chronometer
        android:id="@+id/secund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/grid"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <LinearLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/restartBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:id="@+id/grid2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/startcolor"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img1"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/brain1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain_close"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/purplestart"
                android:background="@drawable/startcolor"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img3"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/brain2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain_close"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/startcolor"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img5"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/brain3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain_close"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/startcolor"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img2"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/brain4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain_close"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/startcolor"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img4"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/brain5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain_close"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/card6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/startcolor"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img6"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/brain6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain_close"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/card7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/startcolor"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img3"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/brain7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain_close"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/card8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/startcolor"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img5"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/brain8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain_close"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/card9"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/startcolor"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img2"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/brain9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain_close"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:id="@+id/card10"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/startcolor"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img6"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/brain10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain_close"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/card11"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/startcolor"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img11"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img4"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/brain11"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain_close"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/card12"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@drawable/startcolor"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img12"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img1"
                    android:visibility="invisible"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/brain12"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/brain_close"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/restartBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Restart"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="@drawable/next_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cancelBtn"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="@drawable/next_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/restartBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>